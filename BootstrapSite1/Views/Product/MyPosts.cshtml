@model IEnumerable<BootstrapSite1.Domain.Entities.Product>

@{
    ViewBag.Title = "MyPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MyPosts</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <div>This is the list of products that you have posted</div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                   Name
                </th>
                <th>Description</th>
                <th class="text-right">Price</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@Html.ActionLink(item.Name, "MyPostEdit",
                    new { item.ProductId })</td>
                    <td>
                       @item.Description
                    </td>
                    <td class="text-right">@item.Price.ToString("c")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Product"))
                        {
                            @Html.Hidden("ProductId", item.ProductId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>

    </div>
</div>